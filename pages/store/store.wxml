<!--pages/store/store.wxml-->
<view class="topbox">
    <view class="nameline">
        <view class="name">名字阿巴</view>
        <image class="sex" src="/images/性别@2x.png"></image>
        <image class="mail" src="/images/形状 15@2x.png"></image>
    </view>
    <view class="white">
        <view class="topbanner">
            <text bindtap="gotomain"> 精选 </text>
            <text> 书城 </text>
            <text> 社区 </text>
            <text bindtap="gotostore"> 商城 </text>
        </view>
    </view>
    <view class="headpic"></view>
    <image class="vip" src="/images/青色.png"></image>
</view>

<view class="nextbox">
    <view class="topnews">
        <view class="lefttopnews">云头条</view>
