    <view class="mainbox">
        <view class="products">
            <view class='productstitle'>精选商品</view>
            <view class='productsbox'>
                <view class="productsli">
                    <view class="productstxt" style="font-size:30rpx;font-weight: bold;color:white;">商品名</view>
                    <view class="productstxt" style="color:white;">详细信息，...</view>
                    <image class="productsimg" src="/images/ipa.png"></image>
                </view>
                <view class="productsli">
                    <view class="productstxt" style="font-size:30rpx;font-weight: bold;color:white;">商品名</view>
                    <view class="productstxt" style="color:white;">详细信息，...</view>
                    <image class="productsimg" src="/images/ipa.png"></image>
                </view>
                <view class="productsli">
                    <view class="productstxt" style="font-size:30rpx;font-weight: bold;color:white;">商品名</view>
                    <view class="productstxt" style="color:white;">详细信息，...</view>
                    <image class="productsimg" src="/images/ipa.png"></image>
                </view>
                <view class="productsli">
                    <view class="productstxt" style="font-size:30rpx;font-weight: bold;color:white;">商品名</view>
                    <view class="productstxt" style="color:white;">详细信息，...</view>
                    <image class="productsimg" src="/images/ipa.png"></image>
                </view>
            </view>
        </view>
        <view class="concentstore">
            <view class='concentstoretitle'>精选店铺</view>
            <view class='concentstorebox'>
                <view class="concentstoreli">
                    <view class="concentstoretxt" style="font-size:30rpx;color:white;">店铺名</view>
                    <view class="standbybox"></view>
                </view>
                <view class="concentstoreli">
                    <view class="concentstoretxt" style="font-size:30rpx;color:white;">店铺名</view>
                    <view class="standbybox"></view>
                </view>
                <view class="concentstoreli">
                    <view class="concentstoretxt" style="font-size:30rpx;color:white;">店铺名</view>
                    <view class="standbybox"></view>
                </view>
                <view class="concentstoreli">
                    <view class="concentstoretxt" style="font-size:30rpx;color:white;">店铺名</view>
                    <view class="standbybox"></view>
                </view>
            </view>
        </view>
        <view class="concentstore">
            <view class='concentstoretitle'>历史浏览</view>
            <view class='concentstorebox'>
                <view class="concentstoreli">
                    <view class="concentstoretxt" style="font-size:30rpx;color:white;">店/品名</view>
                    <view class="standbybox"></view>
                </view>
                <view class="concentstoreli">
                    <view class="concentstoretxt" style="font-size:30rpx;color:white;">店/品名</view>
                    <view class="standbybox"></view>
                </view>
                <view class="concentstoreli">
                    <view class="concentstoretxt" style="font-size:30rpx;color:white;">店/品名</view>
